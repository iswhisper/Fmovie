extend ../layout

block content
  .container.paddingB
    .row
      each cat in catetories
        .panel.panel-default
          .panel-heading
            h3
              a(href='/results?cat=#{cat._id}&p=0') #{cat.name}
          .panal-body.clearfix
            if cat.movies&&cat.movies.length>0
              each item in cat.movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      //-判断是绝对路径还是相对路径
                      if item.poster.indexOf('http')>-1
                        //-绝对路径
                        img(src="#{item.poster}",alt="#{item.title}")
                      else
                        img(src="/upload/#{item.poster}",alt="#{item.title}")
                    .caption
                      h3 #{item.title}
                      p
                        a.btn.btn-primary(href="/movie/#{item._id}",role="button")  观看预告片
