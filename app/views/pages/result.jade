extend ../layout

block content
  .container.paddingB
    .row
        .panel.panel-default
          .panel-heading
            h3 #{keyword}
          .panal-body.clearfix
            if movies&&movies.length>0
              each item in movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      img(src="#{item.poster}",alt="#{item.title}")
                    .caption
                      h3 #{item.title}
                      p
                        a.btn.btn-primary(href="/movie/#{item._id}",role="button")  观看预告片
        ul.pagination
          //- 页面上写js只要在最前方加上"-"即可
          - for(var i=0;i<totalPage;i++){
           - if(currentPage==(i+1)){
               li.active
                span #{currentPage}
              - }else {
                  li
                    a(href='results?#{query}&p=#{i}') #{i+1}
             - }
            - }
